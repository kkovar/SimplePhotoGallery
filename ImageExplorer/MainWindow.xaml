<Window x:Class="ImageExplorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <RichTextBox x:Name="FilesList" HorizontalAlignment="Left" Height="159" Margin="62,68,0,0" VerticalAlignment="Top" Width="395">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox&#x9;"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button x:Name="ListImages" Content="List Images" HorizontalAlignment="Left" Margin="177,271,0,0" VerticalAlignment="Top" Width="75" Click="DoImageSearch"/>
    </Grid>
</Window>
